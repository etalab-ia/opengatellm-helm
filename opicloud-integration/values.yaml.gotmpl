elasticsearch:
  enabled: false

opengatellm:
  postgresql:
    enabled: false
    clusterName: cnpg-cluster-albert-ppr

  opengatellm:
    structuredConfig:
      dependencies:
        elasticsearch:
          hosts: http://elasticsearch-master:9200

    containerSecurityContext:
      allowPrivilegeEscalation: false
      capabilities:
        drop: [ALL]
      runAsNonRoot: true
      seccompProfile:
        type: RuntimeDefault

vllm-stack:
  routerSpec:
    containerSecurityContext:
      allowPrivilegeEscalation: false
      capabilities:
        drop: [ALL]
      runAsNonRoot: true
      seccompProfile:
        type: RuntimeDefault
  serviceEngineSpec:
    containerSecurityContext:
      allowPrivilegeEscalation: false
      capabilities:
        drop: [ALL]
      runAsNonRoot: true
      seccompProfile:
        type: RuntimeDefault
